qt6_add_qml_module(appDesktopApp
    URI DesktopApp
    VERSION 1.0
    NO_PLUGIN
    QML_FILES
        Main.qml
    RESOURCE_PREFIX "/"    
)

# указываем существование папок
add_subdirectory(qml)
add_subdirectory(modules)

# проставляем пути импорта к модулям
list(APPEND QML_DIRS "${CMAKE_BINARY_DIR}/qml")
list(APPEND QML_DIRS "${CMAKE_BINARY_DIR}/modules")
set(QML_IMPORT_PATH "${QML_DIRS}"
    CACHE STRING "")

# устанавливаем связь/подключаем нужные библиотеки
target_link_libraries(appDesktopApp PRIVATE
    qmlCustomplugin
)
